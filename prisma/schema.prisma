generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Book {
  id        Int      @id @default(autoincrement())
  title     String
  author    String
  year      Int
  stock     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  loans     Loan[]
}

model Member {
  id        Int      @id @default(autoincrement())
  name      String
  className String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  loans     Loan[]
  user      User[]
}

model Loan {
  id         Int       @id @default(autoincrement())
  loanDate   DateTime  @default(now())
  returnDate DateTime?
  borrower   String
  status     String
  bookId     Int
  memberId   Int
  book       Book      @relation(fields: [bookId], references: [id])
  member     Member    @relation(fields: [memberId], references: [id])
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      UserRole
  memberId  Int?
  member    Member?  @relation(fields: [memberId], references: [id])
  createdAt DateTime @default(now())
}

enum UserRole {
  ADMIN
  PETUGAS
  MEMBER
}
